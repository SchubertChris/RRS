// tsconfig.json
{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@c/*": [
        "Components/*"
      ],
      "@l/*": [
        "Components/Layout/*"
      ],
      "@p/*": [
        "Components/Pages/*"
      ],
      "@f/*": [
        "Components/Forms/*"
      ],
      "@s/*": [
        "Assets/Style/Base/*"
      ],
      "@t/*": [
        "Assets/Style/Base/Themes/*"
      ],
      "@ft/*": [
        "Assets/Style/Base/Themes/Fonts/*"
      ],
      "@img/*": [
        "Assets/Images/*"
      ],
      "@u/*": [
        "Utils/*"
      ],
      "@r/*": [
        "Routes/*"
      ],
      "@svc/*": [
        "Services/*"
      ],
      "@st/*": [
        "Store/*"
      ],
      "@ty/*": [
        "Types/*"
      ],
      "@pl/*": [
        "Plugins/*"
      ]
    }
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ]
}